<Window x:Class="DroneQualIT.Affichage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Drones Qual-IT" ResizeMode="NoResize"
        SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="OnLoaded">
    <Canvas x:Name="canvas" Height="{Binding ActualHeight, ElementName=background}"
            Width="{Binding ActualWidth, ElementName=background}">
        <Image x:Name="background" Source="/Resources/Images/Background.jpg" Panel.ZIndex="-1" />
    </Canvas>
</Window>
